<odoo>
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient.tree.view</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="history"/>
                <field name="cr_ratio"/>
                <field name="blood_type"/>
                <field name="pcr"/>
                <field name="image"/>
                <field name="address"/>
                <field name="age"/>
                <field name="state"/>
                <field name="department_id"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="birth_date"/>
                        <field name="history"/>
                        <field name="cr_ratio" required="[('pcr','=',True)]"/>
                        <field name="blood_type"/>
                        <field name="pcr"/>
                        <field name="image"/>
                        <field name="address"/>
                        <field name="age"/>
                        <field name="state"/>
                        <field name="department_id" domain="[('is_opened','=',True)]"/>
                        <field name="doctor_id" widget="many2many_tags" attrs="{'readonly': [('department_id','=',False)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hms_patient_action" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menuitem_hms_allpatients"
          name="All Patients"
          parent="menu_root_patients"
          action="hms_patient_action"/>
</odoo>

